<form onsubmit="saveLab(this); return false;" id="l-a-frm">
  <header>
    About Lab
  </header>
  <body>
    <div class="row">
      <div class="input-field col s12">
        <input type="text" id="l_title" data-length="32" name="title" required>
        <label for="l_title">Title</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <textarea id="l_desc" class="materialize-textarea" name="desc" required></textarea>
        <label for="l_desc">Description</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input type="text" id="l_subject" name="subject" required>
        <label for="l_subject">Subject</label>
      </div>
      <div class="input-field col s6">
        <div class="row">
          <div class="col s6">
            <select name="hr" required>
               <option value="" disabled selected>Hours</option>
               <option value="1">1</option>
               <option value="2">2</option>
               <option value="3">3</option>
             </select>
             <label>Duration in Hrs &amp; Mins</label>
          </div>
          <div class="col s6">
             <select name="min" required>
                <option value="" disabled selected>Mins</option>
                <option value="0">00</option>
                <option value="15">15</option>
                <option value="30">30</option>
                <option value="45">45</option>
              </select>
          </div>
        </div>




        <!--<input type="text" id="l_duration" name="duration" required>-->


      </div>
    </div>
  </body>
  <footer>
    <button class="btn waves-effect waves-light" type="submit" name="action" id="l-a-next">
      Next
    </button>

  </footer>
</form>
